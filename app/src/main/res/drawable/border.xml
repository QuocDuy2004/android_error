<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Đặt màu của border (stroke) là màu xanh và độ rộng là 1dp -->
    <stroke
        android:width="1dp"
        android:color="#1477F8" />

    <!-- Đặt kích thước của hình dạng -->
    <size
        android:width="100dp"
        android:height="10dp" />

    <!-- Đặt bán kính của góc -->
    <corners
        android:radius="50dp" />

</shape>
